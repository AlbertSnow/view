<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.albert.viewapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/main_hardware_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HardWareDrawModel"
            android:onClick="onClickHardware"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/main_software_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SoftWareDrawModel"
            android:onClick="onClickSoftware"
            android:textAllCaps="false"
            />

    </LinearLayout>


</FrameLayout>
